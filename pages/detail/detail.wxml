<!--detail.wxml-->

<modal class="modal" hidden="{{modalHidden2}}" no-cancel bindconfirm="modalChange2">
	<block wx:if="{{photo.camera != '' && photo.camera != null}}">
        <view> <text>Camera: {{photo.camera}}</text> </view>
    </block>
    <block wx:if="{{photo.lens != '' && photo.lens != null}}">
        <view> <text>Lens: {{photo.lens}}</text> </view>
    </block>
    <block wx:if="{{photo.aperture != '' && photo.aperture != null}}">
        <view> <text>Aperture: {{photo.aperture}}</text> </view>
    </block>
    <block wx:if="{{photo.iso != '' && photo.iso != null}}">
        <view> <text>ISO: {{photo.iso}}</text> </view>
    </block>
    <block wx:if="{{photo.rating != '' && photo.rating != null}}">
        <view> <text>Rate: {{photo.rating}}</text> </view>
    </block>
    <block wx:if="{{photo.votes_count != '' && photo.votes_count != null}}">
        <view> <text>Vote: {{photo.votes_count}}</text> </view>
    </block>
    <block wx:if="{{photo.times_viewed != '' && photo.times_viewed != null}}">
        <view> <text>View: {{photo.times_viewed}}</text> </view>
    </block>
</modal>

<view class="container">
    <view class="topic-detail">
        <view class="topic-owner">
            <image class="owner-avatar" src="{{photo.user.userpic_url}}" id="{{photo.user.id}}" bindtap="loadUser"></image>
            <view class="topic-tit">{{photo.user.username}}</view>
        </view>
        <image style="width: 750rpx; height: {{height}}rpx; background-color: #ffffff;" src="{{photo.images[0].url}}" mode="aspectFit" bindtap="modalTap2"></image>
        <view class="topic-desc">
            <text>{{photo.description}}</text>
        </view>
        <view class="topic-tags">
            <block wx:for="{{tags}}">
                #{{item}}
            </block>
        </view>
        <!--<block wx:for="{{pages}}">-->
            <!--<text>{{item[0]}} ({{item[1]}})</text>-->
        <!--</block>-->
    </view>
    <view class="replies">
        <block wx:for="{{comments}}">
            <view class="replies-item" id="{{item.id}}">
                <view class="reply-owner">
                    <image class="reply-avatar" src="{{item.user.userpic_url}}" id="{{item.user.id}}" bindtap="loadUser"></image>
                    <text class="reply-name">{{item.user.username}}</text>
                    <!--<text class="reply-time">{{item.created_at}}</text>-->
                </view>
                <view class="reply-content">
                    {{item.body}}
                </view>
            </view>
        </block>
    </view>
    <loading hidden="{{hidden}}">
        Loading...
    </loading>
</view>
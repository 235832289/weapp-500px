<!--detail.wxml-->
<view class="container">
    <view class="topic-detail">
        <view class="topic-owner">
            <image class="owner-avatar" src="{{photo.user.userpic_url}}" id="{{photo.user.id}}" bindtap="loadUser"></image>
            <view class="topic-tit">{{photo.user.username}}</view>
        </view>
        <image style="width: 750rpx; height: {{height}}rpx; background-color: #ffffff;" src="{{photo.images[0].url}}" mode="aspectFit"></image>
        <view class="topic-desc">
            <text>{{photo.description}}</text>
        </view>
        <block wx:for="{{tags}}">
            <text class="reply-content">#{{item}}</text>
        </block>
        <!--<block wx:for="{{pages}}">-->
            <!--<text>{{item[0]}} ({{item[1]}})</text>-->
        <!--</block>-->
    </view>
    <view class="replies">
        <block wx:for="{{comments}}">
            <view class="replies-item" id="{{item.id}}">
                <view class="reply-owner">
                    <image class="reply-avatar" src="{{item.user.userpic_url}}" id="{{item.user.id}}" bindtap="loadUser"></image>
                    <text class="reply-name">{{item.user.username}}</text>
                    <!--<text class="reply-time">{{item.created_at}}</text>-->
                </view>
                <view class="reply-content">
                    {{item.body}}
                </view>
            </view>
        </block>
    </view>
    <loading hidden="{{hidden}}">
        Loading...
    </loading>
</view>